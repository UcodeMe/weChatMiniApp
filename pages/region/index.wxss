@import "/assets/wxss/common.wxss";
@import "/assets/wxss/iconfont.wxss";

.region-block {
  display: flex;
  /* height: 800rpx; */
}

.region-block .left {
  height: inherit;
  background-color: #fff;
  width: auto;
  border-right: 1rpx solid #ebebeb;
}

.region-block .middle {
  height: 720rpx;
  background-color: #fff;
  width: auto;
  position: absolute;
  left: 233rpx;
}

.region-block .region-item {
  min-height: 90rpx;
  width: 230rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #ebebeb;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.region-block .active {
  font-size: 32rpx;
  color: #ff9244;
}

.region-block .right {
  width: 100%;
  background-color: #f5f5f5;
  flex-wrap: wrap;
  font-size: 28rpx;
  font-weight: 400;
  color: #666;
}

.right .region-city {
  float: left;
  max-width: 400rpx;
  min-width: 160rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 45rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
