@import "/assets/wxss/common.wxss";
@import "/assets/wxss/iconfont.wxss";

.clearfix:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}

.timetable-list {
  width: 100%;
  height: 142rpx;
  padding-top: 24rpx;
  box-sizing: border-box;
  padding-left: 24rpx;
}

.list-M {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  border: 2rpx solid #ebebeb;
  border-radius: 10rpx;
  float: left;
  margin-top: 8rpx;
}

.list-M>view {
  color: 80rpx;
  font-size: 38rpx;
  float: left;
  min-width: 40rpx;
  text-align: center;
  margin-left: 3rpx;
  margin-top: 16rpx;
}

.list-M > text {
  color: #999;
  font-size: 24rpx;
  float: left;
  margin-top: 28rpx;
}

.timetable-right {
  float: left;
  padding-left: 24rpx;
  box-sizing: border-box;
  width: 82%;
}

.list-date, .list-week {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.list-d, .list-w {
  float: left;
}

.list-w {
  color: #999;
  padding: 12rpx;
}

.list-d {
  width: 26rpx;
  height: 26rpx;
  padding: 12rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 30rpx;
  color: #666;
}

.active {
  background: #ff9244;
  color: white;
}

.choose-time {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin-top: 40rpx;
}

.choose-time .place {
  color: #47bcb8;
  margin-left: 30rpx;
}

.choose-time  .icon-xia {
  font-size: 10rpx;
  color: #e8eaed;
}

.main-list {
  padding-left: 40rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
  padding-bottom: 226rpx;
}

.main-list>view {
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: flex-start;
}

.time-line {
  vertical-align: top;
}

.time-line .start-time {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 10rpx;
}

.time-line .end-time {
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
  width: 100rpx;
}

.time-line>image {
  width: 4rpx;
  height: 196rpx;
  margin-top: 20rpx;
  margin-left: 34rpx;
}

.company-top {
  display: flex;
}

.company-top > image {
  width: 64rpx;
  height: 64rpx;
  border: 1rpx solid #ddd;
  margin-right: 12rpx;
}

.company-name {
  font-size: 36rpx;
  float: left;
  font-weight: bold;
  max-width: 330rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.industry-name {
  font-size: 24rpx;
  width: 164rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 15rpx;
  float: left;
  background: #ff9244;
  color: #fff;
  box-sizing: border-box;
  margin-top: 5rpx;
}

.compony-bottom {
  color: #999;
  font-size: 24rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  width: 100%;
}

.compony-bottom .natureName, .compony-bottom .industryNames {
  float: left;
  color: #999;
  font-size: 24rpx;
}

.compony-bottom .industryNames {
  max-width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.compony-bottom .natureName {
  box-sizing: border-box;
  width: 220rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bottom-address {
  color: #666;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
  margin-top: 16rpx;
  max-width: 560rpx;
}

.tagNames {
  display: flex;
  align-items: center;
}

.tagNames .tagTitle {
  font-size: 30rpx;
  color: #666;
}

.tagNames .tags {
  font-size: 22rpx;
  color: #f57921;
  /* margin-top: 20rpx; */
  display: flex;
  align-items: center;
  overflow: hidden;
  max-width: 66%;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tags>view {
  height: 33rpx;
  line-height: 33rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 33rpx;
  background-color: #fff9f1;
  margin-right: 20rpx;
  text-align: center;
  white-space: nowrap;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
}

.share {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 226rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: white;
  border-top: 1rpx solid #eee;
}

.share>text {
  display: block;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.share>button {
  background: transparent;
  padding: 0;
  margin: 0 50rpx 0 30rpx;
  line-height: 0;
  border: 1rpx solid transparent;
}

.share>button::after {
  border: none;
}

.share>image, .share>button>image {
  width: 64rpx;
  height: 64rpx;
}

.share .save-img {
  background: #47bcb8;
  color: white;
  font-size: 24rpx;
  border-radius: 32rpx;
  width: 156rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 50rpx;
}

.company-right {
  margin-left: 30rp x;
}

.no-publicize {
  font-size: 30rpx;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
  line-height: 60px;
  width: 100%;
  text-align: center;
}
