page {
  padding-top: 336rpx;
}

.fixed-top {
  position: fixed;
  top: 0;
  z-index: 999;
  width: inherit;
  background-color: #fff;
  border-bottom: 0.3333rpx solid #ebebeb;
  padding-bottom: 20rpx;
  box-shadow: 0 10rpx 30rpx -1rpx #f0f0f0;
}

.search-block {
  padding: 0 26rpx;
}

.search-tabbar {
  margin-top: 47rpx;
}

.no-search-data {
  position: absolute;
  width: 100%;
  top: 40%;
}

.clearfix {
  overflow: auto;
  _height: 1%;
}

.page-line {
  width: 100%;
  height: 20rpx;
  background: #eee;
}

.job-top {
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 30rpx;
  padding-top: 22rpx;
}

.split-line {
  border-top: 20rpx solid #eee;
}

.jab-name, .job-wages {
  font-size: 36rpx;
  font-weight: bolder;
}

.jab-name {
  float: left;
  color: #333;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.job-wages {
  float: right;
  color: #47bcb8;
}

.job-request {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  display: flex;
}

.requirement {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.job-request>view:nth-child(1), .job-request>view:nth-child(2) {
  box-sizing: border-box;
  margin-left: 10rpx;
  margin-right: 10rpx;
  max-width: 250rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.job-place {
  color: #333;
  font-size: 24rpx;
}

.job-save {
  color: #999;
  font-size: 24rpx;
  /* margin-top: 20rpx; *//* margin-bottom: 10rpx; */
  line-height: 2;
}

.company {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.companyLogo {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.companyName {
  color: #666;
  font-size: 30rpx;
  margin: 0 10rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tagNames {
  margin-top: 18rpx;
}

.tagNames .tags {
  font-size: 22rpx;
  color: #f57921;
  float: left;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.tags>view {
  height: 33rpx;
  line-height: 33rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 33rpx;
  background-color: #fff9f1;
  margin-right: 20rpx;
  text-align: center;
  white-space: nowrap;
}
