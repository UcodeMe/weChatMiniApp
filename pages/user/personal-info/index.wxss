@import "/assets/wxss/iconfont.wxss";

.info-top {
  background: url('http://qiniu.meefine.com/user-info-bg.jpg') top left;
  background-size: 100% 100%;
  height: 280rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.info-top .avatar {
  width: 149rpx;
  height: 149rpx;
  border: 5rpx solid #fff;
  border-radius: 149rpx;
  position: absolute;
  left: 297rpx;
  top: 69rpx;
}

.info-top .camera-block {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background-color: #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 400rpx;
  top: 175rpx;
}

.info-top .icon-camera_fill {
  font-size: 34rpx;
}

.first-block, .second-block, .third-block {
  background: #fff;
  border-bottom: 21rpx solid #e8e8e8;
}

.third-block .grant-block {
  width: inherit;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grant-block > view {
  display: flex;
  width: 408rpx;
  height: 60rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #dfdfdf;
}

.grant-block .icon-weixin {
  padding-left: 80rpx;
  color: #58ab2f;
  font-size: 46rpx;
  padding-top: 10rpx;
}

.grant-block .btn-get-phone {
  font-size: 24rpx;
  color: #666;
  width: inherit;
  height: inherit;
  border: none !important;
  text-align: left;
}

.fourth-block {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.fourth-block button {
  font-size: 32rpx;
  background-color: #ff6000;
  color: #fff;
  width: 500rpx;
  height: 80rpx;
}
