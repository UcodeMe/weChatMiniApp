@import "/assets/wxss/common.wxss";
@import "/assets/wxss/iconfont.wxss";

.clearfix {
  overflow: auto;
  _height: 1%;
}

.r-icon {
  float: right;
  color: #aaa;
  font-size: 24rpx;
}

.container {
  position: relative;
  width: 100%;
  height: 193rpx;
  border-bottom: 1rpx solid #ebebeb;
}

.company {
  width: 100%;
  position: absolute;
  padding: 50rpx 44rpx 23rpx 42rpx;
  z-index: 222;
  top: 0;
  left: 0;
  box-sizing: border-box;
  background: #fff;
  /* overflow: hidden; *//* display: flex; */
}

.delete {
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  width: 180rpx;
  height: inherit;
  background: #ff9244;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 5.5;
  font-weight: bolder;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.companyLogo {
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.company .doc-icon {
  width: 200rpx;
  /* height: 200rpx; */
  border: 1rpx solid#E5E5E5;
  padding: 10rpx;
  height: 90rpx;
}

.company .iconfont {
  font-size: 100rpx;
}

.company .middle {
  /* min-width: 60%; */
  max-width: 78%;
  float: left;
  margin-left: 20rpx;
  /* overflow:hidden; */
}

.middle .companyName {
  font-size: 32rpx;
  float: left;
  font-weight: bold;
  max-width: 100%;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.middle .type {
  font-size: 24rpx;
  width: 164rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 15rpx;
  float: left;
  background: #ff9244;
  color: #fff;
}

.company   .bottom {
  float: left;
  margin-left: 20rpx;
  margin-top: 16rpx;
  max-width: 76%;
}

.bottom .natureName, .bottom .industryNames {
  float: left;
  color: #999;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bottom .natureName {
  /* border-right: 1rpx solid #999; */
  box-sizing: border-box;
  /* padding-right: 20rpx; */
  margin-right: 9rpx;
  max-width: 49%;
}

.bottom .industryNames {
  max-width: 52%;
}

.bottom-address {
  float: left;
  margin-left: 20rpx;
  margin-top: 16rpx;
  color: #999;
  font-size: 24rpx;
  max-width: 76%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tagNames {
  width: 88%;
  height: 47rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #ebebeb;
  padding-left: 21rpx;
  padding-right: 21rpx;
  margin-left: 21rpx;
}

.tagNames2 {
  width: 88%;
  height: 47rpx;
  overflow: hidden;
  padding-left: 21rpx;
  padding-right: 21rpx;
  margin-left: 21rpx;
  margin-top: 50rpx;
}

.tagNames .tagTitle, .tagNames2 .tagTitle {
  float: left;
  font-size: 30rpx;
}

.tagNames .tags, .tagNames2 .tags {
  font-size: 22rpx;
  color: #f57921;
  /* margin-top: 20rpx; */
  float: left;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.tags>view {
  height: 33rpx;
  line-height: 33rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 33rpx;
  background-color: #fff9f1;
  margin-right: 20rpx;
  text-align: center;
  white-space: nowrap;
}

.jod-list {
  /* height: 170rpx; */
  width: 100%;
  box-sizing: border-box;
  padding: 18rpx 40rpx;
}

.job-line {
  width: 100%;
  height: 2rpx;
  box-sizing: border-box;
  background: #ebebeb;
  /* margin-bottom: 34rpx; *//* margin-top: 40rpx; *//* margin-left: -18rpx; */
}

.job-list-left, .ob-list-right {
}

.job-list-left {
  width: 89%;
  float: left;
}

.job-list-right {
  width: 10%;
  float: left;
  padding-top: 3%;
  box-sizing: border-box;
  height: 100%;
}

.job-nam {
  float: left;
  width: 70%;
  color: #333;
  font-size: 32rpx;
  font-weight: bolder;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.job-pay {
  float: left;
  width: 28%;
  color: #47bcb8;
  font-size: 32rpx;
  margin-right: 2rpx;
}

.job-address, .have-num, .job-conditions, .job-conditions2 {
  float: left;
  color: #999;
  font-size: 24rpx;
}

.job-conditions {
  width: 60%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.job-conditions2 {
  width: 38%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.job-address, .have-num {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.job-address {
  width: 60%;
}

.have-num {
  max-width: 38%;
}

