/* pages/job/detail.wxss */
@import "/assets/wxss/common.wxss";
@import "/assets/wxss/iconfont.wxss";
@import "/assets/wxParse/wxParse.wxss";

/* .clearfix {
  overflow: auto;
  _height: 1%;
} */

.clearfix:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}

.page-line {
  width: 100%;
  height: 20rpx;
  background: #eee;
}

.job-top {
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  width: 100%;
}

.jab-name, .job-wages {
  font-size: 36rpx;
  font-weight: bolder;
}

.jab-name {
  float: left;
  color: #333;
}

.job-wages {
  float: right;
  color: #47bcb8;
}

.job-request {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.job-request>view {
  float: left;
  font-size: 24rpx;
  color: #333;
}

.job-request>view:nth-child(1), .job-request>view:nth-child(2) {
  box-sizing: border-box;
  border-right: 1rpx solid #333;
  padding-right: 20rpx;
  margin-right: 20rpx;
}

.job-place {
  color: #333;
  font-size: 24rpx;
}

.job-save {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  line-height: 2;
}

.job-collection {
  float: right;
}

.icon-like, .icon-like_fill {
  font-size: 30rpx;
  margin-left: 8rpx;
  margin-bottom: 4rpx;
}

.icon-like_fill {
  color: #db639b;
}

.job-middle {
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.company {
  width: 100%;
  padding: 40rpx 0;
  box-sizing: border-box;
  border-top: 1rpx solid #ebebeb;
  margin-top: 40rpx;
}

.companyLogo {
  width: 80rpx;
  height: 80rpx;
  float: left;
  border: 1rpx solid #ddd;
}

.company .doc-icon {
  width: 200rpx;
  /* height: 200rpx; */
  border: 1rpx solid#E5E5E5;
  padding: 10rpx;
  height: 90rpx;
}

.company .iconfont {
  font-size: 100rpx;
}

.company .middle {
  /* min-width: 60%; */
  max-width: 80%;
  float: left;
  margin-left: 20rpx;
  /* overflow:hidden; */
}

.middle .companyName {
  font-size: 32rpx;
  float: left;
  font-weight: bold;
  max-width: 100%;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.middle .type {
  font-size: 24rpx;
  width: 164rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 15rpx;
  float: left;
  background: #ff9244;
  color: #fff;
}

.company   .bottom {
  float: left;
  margin-left: 20rpx;
  margin-top: 16rpx;
  max-width: 83%;
}

.bottom .natureName, .bottom .industryNames {
  float: left;
  color: #999;
  font-size: 24rpx;
}

.bottom .industryNames {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 50%;
}

.bottom .natureName {
  /* border-right: 1rpx solid #999; */
  box-sizing: border-box;
  padding-right: 20rpx;
}

.natureName-line {
  float: left;
  width: 1rpx;
  height: 22rpx;
  margin-top: 2rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  background: #999;
}

.job-bottom {
  padding: 40rpx 40rpx 170rpx 40rpx;
  box-sizing: border-box;
}

.tags {
  font-size: 22rpx;
  color: #f57921;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
  float: left;
  display: flex;
  align-items: center;
  width: 100%;
  /* overflow: hidden; */
}

.tags>view {
  height: 33rpx;
  line-height: 33rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 33rpx;
  background-color: #fff9f1;
  margin-right: 20rpx;
  text-align: center;
  white-space: nowrap;
}

.job-describe {
  color: #333;
  font-size: 36rpx;
}

.job-introduced {
  color: #333;
  font-size: 30rpx;
}

.job-text {
  color: #666;
  font-size: 24rpx;
  line-height: 1.5;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.job-get {
  width: 100%;
  height: 120rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #d9d9d9;
  position: fixed;
  bottom: 0;
  line-height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  color: #666;
}

.job-register {
  float: right;
  background: #47bcb8;
  font-size: 30rpx;
  color: #fff;
  width: 214rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 36rpx;
}

.showDownload {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  margin: 0 auto;
}

.downloadUrl {
  width: 670rpx;
  height: 300rpx;
  text-align: center;
  line-height: 1.8;
  color: #333;
  font-size: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  padding: 34rpx 45rpx;
  white-space: pre-line;
  box-sizing: border-box;
}

.closeDownload {
  width: 280rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
  background-color: #ff9244;
  margin: 0 auto;
  margin-top: 82rpx;
  border-radius: 34rpx;
  font-size: 30rpx;
}

.btn-share::after {
  border: none;
}

.btn-share {
  background: transparent;
  padding: 0;
  margin: 0 50rpx 0 30rpx;
  line-height: 0;
  border: 1rpx solid transparent;
  color: #666;
}
