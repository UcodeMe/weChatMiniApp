.job-block {
  padding: 40rpx;
  overflow: hidden;
  position: relative;
}

.job-block .selection-tag {
  width: 87rpx;
  height: 35rpx;
  position: absolute;
  background: rgba(255, 146, 68, 1);
  opacity: 1;
  border-radius: 0px 0px 0px 32rpx;
  font-size: 18rpx;
  color: #FFF;
  text-align: right;
  line-height: 35rpx;
  right: 0;
  top: 0
}

.job-block .first-line {
  display: flex;
  justify-content: space-between;
}

.job-block .second-line {
  margin-top: 20rpx;
}

.job-block .job-name {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 480rpx;
}

.job-block .salary {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(71, 188, 184, 1);
}

.job-block .requirement {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 29rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 20rpx;
  display: flex;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellip;
}

.job-block image {
  width: 40rpx;
  height: 40rpx;
}

.job-block .logo-name {
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.job-block .company-name {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 36rpx;
  color: rgba(102, 102, 102, 1);
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.job-block .publish-time {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 29rpx;
  color: rgba(153, 153, 153, 1);
}

.job-block .publish-time {
  width: 300rpx;
}

.job-block .view-image {
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid rgba(229, 229, 229, 1);
  margin-right: 11rpx;
}

.job-block .split-line {
  padding-left: 10rpx;
  padding-right: 10rpx;
}
