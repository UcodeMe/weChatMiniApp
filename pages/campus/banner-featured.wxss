.featured {
  width: 100%;
  height: 182rpx;
  border-bottom: 20rpx solid #eee;
}

.featured-item {
  height: 182rpx;
  width: 50%;
  float: left;
  box-sizing: border-box;
}

.featured-item:first-child {
  border-right: 1rpx solid #ebebeb;
}

.featured-icon {
  height: 72rpx;
  width: 84rpx;
  float: left;
  margin-right: 16rpx;
  margin-top: 54rpx;
  margin-left: 54rpx;
}

.featured-image {
  height: 72rpx;
  width: 84rpx;
}

.featured-title {
  font-size: 30rpx;
  margin-bottom: 16rpx;
  color: #666;
  margin-top: 57rpx;
}

.featured-bottom {
  font-size: 22rpx;
  color: #999;
}
