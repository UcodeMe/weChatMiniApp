@import "/assets/wxss/common.wxss";
@import "/assets/wxss/iconfont.wxss";
page {
  padding: 0;
   height:100%;
   width:100%;
}
view{
box-sizing:border-box;
 overflow: initial
}
.item-tag .spliter::before {
  content: '/';
}
.info-container {
  height:100%;
   width:100%;
 display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.success-tip{
    text-align:center;

}

.sub-tip{
  height:40rpx;
font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
line-height:40rpx;
}
.sub-tip.first {
  margin-top:50rpx;
}
.success-tip image{
    width:90rpx;
    height:90rpx;

}
.success-tip .tip{
height:34rpx;
margin-top:25rpx;
font-size:36rpx;
font-family:PingFangSC-Semibold;
font-weight:600;
color:rgba(71,188,184,1);
line-height:60rpx;
}
.job-bottom{
  width:60%;
  margin:0 auto;
   text-align: center;
  margin-top:31rpx;

}
.job-bottom button{
    width:100%;
height:100rpx;
line-height:100rpx;
background:rgba(71,188,184,1);
border-radius:50px;
color:#fff;
  }

.user-center {
  overflow: hidden;
  font-size: 30rpx;
  text-align: center;
  color:#666666;
   padding:0 30rpx 0 29rpx;
  width:100%;
}
.tip-img{
width:42rpx;
height:42rpx;
margin-right:17rpx;
vertical-align: text-bottom;
}

.user-center .level-2{
  font-family:PingFangSC-Medium;
  font-weight:500;
  width:100%;
  border-top: 1px solid rgba(235,235,235,1);
  padding:43rpx 0 39rpx 0;
  display:flex;
  justify-content: space-between
}
.level-left,.level-right{
 display:inline-block;
}
.level-right{
 font-size:26rpx;
font-family:PingFangSC-Regular;
font-weight:400;
}
.icon-arrowright{
 font-size:24rpx;
 font-family:PingFangSC-Regular;
font-weight:400;
}

 .item-tag{
  color:rgba(51,51,51,1);
  display:inline-block;
}
.last-item{
    border-bottom: 1px solid rgba(235,235,235,1);
}
.cancel-tip{
  font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(71,188,184,1);
line-height:60rpx;
}
