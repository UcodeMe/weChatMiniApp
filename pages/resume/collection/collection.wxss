@import "/assets/wxss/common.wxss";
@import "/assets/wxss/iconfont.wxss";
@import "/assets/wxParse/wxParse.wxss";

page {
  padding: 0;
   height:100%;
   width:100%;
}
view{
   overflow: initial
}

.resume-container {
  height:100%;
   width:100%;
 display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.job-detail-header,.job-detail-center,.job-bottom{
  text-align: center;
  width:100%;
}
.job-detail-header .plan{
     width:93%;
     margin:0 auto;
     background:url(https://qiniu3.meefine.com/images/yxtxs01.png) no-repeat;
     background-size:100%;
     height:130rpx;
 }
 .second-row{
    text-align:center;
    overflow: initial
    
  }
.job-detail-header .tip{
    font-size:34rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(122,227,224,1);
}
.job-detail-header .label,.job-detail-center .label{
font-size:36rpx;
font-family:PingFangSC-Semibold;
font-weight:600;
color:rgba(102,102,102,1);
line-height:60rpx;
}
.job-detail-header .label{
  margin-top:50rpx;

}
.middle-row{
  position: relative;
  text-align:center;
  margin-top:50rpx;
}
.middle-row .circle{
  width:25rpx;
  position: relative;
  height:25rpx;
  display:inline-block;
  border:solid 4rpx rgba(122,227,224,1);
  border-radius:50%;

}
.middle-row .line{
  position: relative;
  top:-12.5rpx;
width:180rpx;
height:4rpx;
display:inline-block;
margin:0px auto;
padding:0px;
overflow:hidden;
background-color:rgba(122,227,224,1);


}
.service-content{
  width:650rpx;
  margin:0 auto;
}
.text-row{
  display:flex;
  justify-content: space-around
}
.text-content{
  display:inline-block;
  margin-top:8rpx;

height:22rpx;
font-size:22rpx;
font-family:PingFangSC-Light;
font-weight:300;
color:rgba(153,153,153,1)
}
.resume-add{
  display:flex;
  width:90%;
  position: relative;
  margin:40rpx auto 0;
  justify-content: space-around;
}
.resume-add .content{
  width:240rpx;
  height:300rpx;
  overflow:hidden
}
.resume-add .content .resume{
  width:100%;
  height:100%;
}
.resume-icon{
width:62rpx;
height:62rpx;
position: relative;
top:-50%;
transform: translateY(-50%);
}
.job-bottom{
  width:70%;
  margin:0 auto;

}
.job-bottom button{
    width:100%;
height:100rpx;
line-height:100rpx;
background:rgba(71,188,184,1);
border-radius:50px;
color:#fff;
  }
