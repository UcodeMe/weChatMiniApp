<!--pages/resume/collection.wxml-->

<block>
<view class="resume-container">
  <view class="job-detail-header">
   <view class="plan">
   </view>
    <view class='second-row'>
      <text class='tip'>
      精选全国海量知名企业，诚邀你加入
      </text>
    </view>
    <view class="label">服务流程</view>
    <view class="service-content">
    <view class='middle-row'>
    <view class="circle"></view>
    <view class="line"></view>
     <view class="circle"></view>
    <view class="line"></view>
    <view class="circle"></view>
    </view>
    <view class='text-row'>
    <view class="text-content">提交简历</view>
    <view class="text-content">人岗匹配</view>
    <view class="text-content">反馈结果</view>
    </view>
    </view>
  </view>

  <view class='job-detail-center'>
      <view class="label">你的简历</view>
   <view class="resume-add">
   <view class="content">
    <image src="{{resumeUrl}}" class="resume"  bindtap="_deleteImage"/>
    <image src="/assets/images/dustbin.png" class="resume-icon"/>
   </view>
   <navigator url="/pages/upload/upload">
    <view class= "content">
    <image src="https://qiniu3.meefine.com/images/yxtxs02.png" class="resume" bindtap="_uploadResume"/>
     <image src="/assets/images/add.png" bindtap="_uploadResume" class="resume-icon"/>
    </view>
    </navigator>
   </view>
  </view>

 

  <view class='job-bottom' >
    <button>
      提交报名
    </button>
  </view>

</view>

</block>