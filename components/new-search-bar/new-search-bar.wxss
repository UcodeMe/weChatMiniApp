@import "/assets/wxss/iconfont.wxss";

.search-bar {
  height: 55rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.icon-search {
  position: absolute;
  left: 22rpx;
  top: 14rpx;
  font-size: 34rpx;
  /* background: red; */
}

.search-input {
  width: calc(100% - 142rpx);
  height: 55rpx;
  position: absolute;
  top: 0rpx;
  border: 1px solid #e6e6ea;
  border-radius: 55rpx;
  padding-left: 60rpx;
  background-color: #fff;
}

.no-button {
  width: calc(100% - 65rpx);
}

.search-input::-webkit-input-placeholder {
  color: #999;
  font-size: 32rpx;
}

.search-bar .btn-search {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  position: absolute;
  right: 0rpx;
  top: 7rpx;
}
