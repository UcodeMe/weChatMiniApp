@import "/assets/wxss/iconfont.wxss";

.complex-filter {
  height: auto;
  border-top: 1rpx solid #ebebeb;
}

.complex-filter .icon-shaixuan {
  font-size: 38rpx;
  margin-right: 8rpx;
}

.complex-filter .arrow {
  display: inline-block;
  position: relative;
  width: 40rpx;
  height: 25rpx;
}

.complex-filter .arrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #666;
  border-style: solid;
  transform: rotate(-135deg);
  transform-origin: center;
  transition: transform 0.3s;
  position: absolute;
  top: 40%;
  right: 10rpx;
}

/* 下箭头 */

.complex-filter .arrow.active::after {
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform-origin: center;
  transition: transform 0.3s;
  margin-top: -10rpx;
}

.complex-filter .first-line {
  font-size: 30rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 60rpx;
  padding-right: 45rpx;
}

.first-line >view {
  display: flex;
  padding-top: 18rpx;
  align-items: center;
}

.first-line .region {
  color: #47bcb8;
  width: 120rpx;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.complex-filter .second-line {
  display: flex;
  justify-content: center;
  margin-top: 34rpx;
}

.second-line >view {
  font-size: 24rpx;
  color: #47bcb8;
  background-color: #f2ffff;
  border-radius: 20rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  padding: 8rpx 12rpx;
  display: flex;
}

.second-line .arrow {
  width: 30rpx;
  height: 20rpx;
  margin-left: 5rpx;
}

.second-line .arrow::after {
  border-color: #47bcb8 !important;
  width: 12rpx;
  height: 12rpx;
}

.complex-filter .conditon-block {
  padding-top: 25rpx;
}

.conditon-block .condition-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.condition-content>view {
  min-width: 120rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 20rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 12rpx;
  text-align: center;
}

.condition-content .active {
  background-color: #ff9244;
  color: #fff;
}

.buttons {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  height: 80rpx;
  box-shadow: 0 10rpx 30rpx -1rpx #f0f0f0;
}

.buttons > view {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buttons .confirm {
  background: rgba(89, 195, 191, 1);
  color: #fff;
}

.buttons .reset {
  background: rgba(255, 255, 255, 1);
  color: rgba(102, 102, 102, 1);
}

.condition-content .inner-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  font-weight: 400;
}

scroll-view {
  padding-bottom: 15rpx;
}

.salary-filter .iconfont {
  font-size: 42rpx;
  color: #60c4c1;
}

.salary-filter .icon-shaixuan {
  font-size: 32rpx;
  margin-top: 5rpx;
}
